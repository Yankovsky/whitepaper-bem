{
  "name": "whitepaper-bem",
  "version": "2.1.0",
  "description": "",
  "main": "dist/whitepaper.css",
  "scripts": {
    "build:css": "postcss src/index.css > dist/whitepaper.css",
    "minify:css": "csso dist/whitepaper.css --output dist/whitepaper.min.css",
    "build": "mkdir -p dist && npm run build:css && npm run minify:css",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whitepapertools/whitepaper-bem.git"
  },
  "author": "whitepaper tools",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whitepapertools/whitepaper-bem/issues"
  },
  "homepage": "https://whitepaper.tools",
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "csso-cli": "^2.0.2",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "postcss-calc": "^7.0.1",
    "postcss-cli": "^3.2.0",
    "postcss-color-function": "^4.1.0",
    "postcss-import": "^7.1.3",
    "postcss-nested": "^1.0.1",
    "postcss-simple-vars": "^5.0.2",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-prettier": "^1.1.1"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.post.css": [
      "stylelint --fix",
      "git add"
    ]
  }
}
